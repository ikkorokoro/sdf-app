            = render 'commons/profile_tub', path_left: notification_path, path_right: myarticle_path, tab_left: 'お知らせ', tab_right: '自分の投稿' 
          .py-3
            .post-count.pb-3
              %p 投稿数  #{@articles.count}
            .container
              .row
                = render 'commons/articles', articles: @articles