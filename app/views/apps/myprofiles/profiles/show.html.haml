.main-bg-color
  .mypage.mx-auto
    = render 'commons/mypage_left'
    .mypage-right
      .mypage-right-top
        = render 'commons/profile_right'
        .tab
          .d-flex
            = render 'commons/profile_tub', path_left: profile_path, path_right: myarticle_path, tab_left: 'お知らせ', tab_right: '自分の投稿' 
          .notification_item{class: "#{add_active_class(profile_path)}"}
            - @notifications.each do |notification|
              = render 'commons/notification', notifications: @notifications, notification: notification 