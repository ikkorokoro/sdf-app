!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title SdfApp
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'load'
  %body
    %nav.navbar.navbar-expand-lg.navbar-light.header-img
      .navbar-brand
        - if !current_page?(root_path)
          = link_to :back do
            = image_tag 'カッチリした矢印アイコン素材 左向き.png', class: 'yazirusi'
        = link_to 'Soldier Reviews', root_path, class: 'header-title'
      - if user_signed_in?
        %li.hoverdown.ml-3
          = image_tag current_user.avatar_image, class: 'user-avatar hoverbtn'
          .hoverdown-content
            = link_to 'プロフィール', profile_path
            = link_to 'ログアウト', destroy_user_session_path, data: { method: 'delete' }
        %button.navbar-toggler{"aria-controls" => "navbarSupportedContent", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarSupportedContent", "data-toggle" => "collapse", :type => "button"}
          %span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
          %ul.navbar-nav.mr-auto
            %li.nav-item.ml-3
              .nav-link
                - if unchecked_notifications.any?
                  %i.fa.fa-circle
                = link_to '通知', notifications_path, class: 'toggler-list'
            %li.nav-item.ml-3
              .nav-link
                = link_to '投稿', new_article_path, class: 'toggler-list'
      - else
        .d-flex
          = link_to new_user_registration_path, class: 'sign-btn btn-posi' do
            %span 新規登録
          = link_to new_user_session_path, class: 'sign-btn btn-posi' do
            %span ログイン
          = link_to users_guest_sign_in_path, method: 'post', class: 'sign-btn btn-posi' do
            %span ゲストログイン
    - if flash.present?
      .flash
        - flash.each do |key, value|
          %div{:class => key}= value
    = yield