!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title SdfApp
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %nav.navbar.navbar-expand-lg.navbar-light.base-bg-color
      .navbar-brand
        - if !current_page?(root_path)
          = link_to :back do
            = image_tag 'カッチリした矢印アイコン素材 左向き.png', class: 'pb-2'
        = link_to 'Soldier Reviews', root_path, class: 'header-title font-weight-bold'
      - if user_signed_in?
        %li.hoverdown.ml-3
          = image_tag '軍人のアイコン素材.png', class: 'user-avatar hoverbtn'
          .hoverdown-content
            = link_to 'プロフィール', '#'
            = link_to 'お気に入り', '#'
            = link_to 'ログアウト', destroy_user_session_path, data: { method: 'delete' }
        %button.navbar-toggler{"aria-controls" => "navbarSupportedContent", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarSupportedContent", "data-toggle" => "collapse", :type => "button"}
          %span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
          %ul.navbar-nav.mr-auto
            %li.nav-item.dropdown
              #navbarDropdown.nav-link.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
                %a.color.ml-3 カテゴリ
              .base-bg-color.dropdown-menu{"aria-labelledby" => "navbarDropdown"}
                .dropdown-item
                  = link_to '鉄棒、中帽','#', class: 'color'
                .dropdown-item
                  = link_to '装具','#', class: 'color'
                .dropdown-item
                  = link_to 'バッグ','#', class: 'color'
                .dropdown-item
                  = link_to '服','#', class: 'color'
                .dropdown-item
                  = link_to '雨具','#', class: 'color'
                .dropdown-item
                  = link_to '防寒具','#', class: 'color'
                .dropdown-item
                  = link_to '靴','#', class: 'color'
                .dropdown-item
                  = link_to '小物','#', class: 'color'
            %li.nav-item.ml-3
              .nav-link
                = link_to '通知','#', class: 'color'
            %li.nav-item.post.ml-3
              .nav-link
                = link_to '投稿', new_article_path, class: 'color'
          %form.form-inline.my-2.my-lg-0
            %input.form-control.mr-sm-2{"aria-label" => "Search", placeholder: "キーワード検索", type: "search"}/
            %button.search.my-2.my-sm-0{type: "submit"} 検索        
      - else
        .d-flex
          .btn.btn_session.p-2
            = link_to 'ログイン', new_user_session_path, class: 'color'
          .btn.btn_session.p-2.ml-2
            = link_to '新規登録', new_user_registration_path, class: 'color'
    - if flash.present?
      .flash
        - flash.each do |key, value|
          %div{:class => key}= value
    = yield
